@model IEnumerable<WebAppTest.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-12 text-end">
                <a asp-controller="Employees" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-square-fill"></i> Create Employees</a>
            </div>

        </div>
    </div>

    <div class="card-body p-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col" style="width:150px;" class="text-center">Employee's Name</th>
                    <th scope="col" style="width:200px;" class="text-center">Age</th>
                    <th scope="col" style="width:150px;" class="text-center">Sex</th>
                    <th scope="col" style="width:200px;" class="text-center">Birthday</th>
                    <th scope="col" style="width:300px;" class="text-center">Image</th>
                    <th scope="col" style="width:300px;" class="text-center">Day create</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row" class="text-center align-middle">@item.Name</th>
                        <td class="text-center align-middle">@item.Age</td>
                        @if (item.Sex == 1)
                        {
                            <td class="text-center align-middle">Male</td>
                        }
                        else
                        {
                            <td class="text-center align-middle">Female</td>
                        }
                        <td class="text-center align-middle">@item.Birthday</td>
                        <td class="text-center"><img class="d-block w-100" style="border-radius: 20px;" src="~/Img/@item.Img" alt="Photo" /></td>
                        <td class="text-center align-middle">
                            <a asp-controller="TimeSheets" asp-action="Index" asp-route-Id="@item.Id" class="btn btn-outline-warning"><i class="bi bi-box-arrow-in-up"></i>TimeSheets</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-2 offset-10 pt-3">
            <a asp-action="Employees" asp-controller="Index" class="btn-outline-primary btn form-control"><i class="bi bi-arrow-return-left"></i>  Back to list employees</a>
        </div>
    </div>

</div>
