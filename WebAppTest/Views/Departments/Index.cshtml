@model IEnumerable<WebAppTest.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-12 text-end">
                <a asp-controller="Departments" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-square-fill"></i> Add Department</a>
            </div>

        </div>
    </div>

    <div class="card-body p-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col"  class="text-center">Department's Name'</th>
                    <th scope="col"  class="text-center">Address</th>
                    <th scope="col" class="text-center">Maneger</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row" class="text-center align-middle">@item.Name</th>
                        <td class="text-center align-middle">@item.Address</td>
                        <td class="text-center align-middle">@item.Maneger</td>
                        <td class="text-center align-middle">
                            <a asp-controller="Employees" asp-action="Index" asp-route-Id="@item.Id" class="btn btn-outline-warning"><i class="bi bi-box-arrow-in-up"></i>List Employee</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>  
    </div>

</div>
